                    </div>
                    @Html.HiddenFor(c => c.idTipoTarjeta)
                </div><br />

                <div class="row form-horizontal">
                    @Html.LabelFor(c => c.NumeroTarjeta, new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(c => c.NumeroTarjeta, new { @readonly = "readonly", @class = "form-control" })
