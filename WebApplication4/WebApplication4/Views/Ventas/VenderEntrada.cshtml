                        </center><br />
                        <div class="row form-group">
                            @Html.LabelFor(c => c.Descuento, new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(c => c.Descuento, new { @class = "form-control", @Value = "0", @disabled = "disabled", @type = "number" })
                            </div>
                        </div>
