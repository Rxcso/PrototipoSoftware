                                </div>
                            </div>
                            <div class="row form-group">
                                @Html.LabelFor(c => c.Vuelto, new { @class = "control-label col-md-3" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(c => c.Vuelto, new { @class = "form-control", @disabled = "disabled", @Value = ViewBag.VueltoM, @type = "number" })
