<script>

    function verificar() {


    }
    function llenar() {
        var montoefe = $("#MontoEfe").val();
        var montopagar = $("#MontoPagar").val();
        if (parseFloat(montoefe) < 0) {
            alert("El monto debe ser mayor o igual a cero");
            return false;
        }

        if (parseFloat(montoefe) > parseFloat(montopagar)) {
            alert("El monto en efectivo debe ser menor al monto a pagar");
            return false;
        }

        var hola;
        hola = String((parseFloat(montopagar) - parseFloat(montoefe)));
        document.getElementById("MontoTar").value = hola;

        var montoTar = $("#MontoTar").val();

        if (parseFloat(montoTar) == 0) {
            document.getElementById("AnioVen").disabled = true;
            document.getElementById("Mes").disabled = true;
            document.getElementById("CodCcv").disabled = true;
            document.getElementById("NumeroTarjeta").disabled = true;
            document.getElementById("idTipoTarjeta").disabled = true;
            document.getElementById("idBanco").disabled = true;
        }
        else {
            document.getElementById("AnioVen").disabled = false;
            document.getElementById("Mes").disabled = false;
            document.getElementById("CodCcv").disabled = false;
            document.getElementById("NumeroTarjeta").disabled = false;
            document.getElementById("idTipoTarjeta").disabled = false;
            document.getElementById("idBanco").disabled = false;
        }

    }

    function calculaPromo() {
        //sacamos el id del banco y tipo tarjeta
        var idBanco = $("#idBanco").val();
        var tipoTarjeta = $("#idTipoTarjeta").val();
        var divPadre = document.getElementById("promocionesLista");
        var hijosDiv = divPadre.getElementsByTagName('div');
        for (var i = 0 ; i < hijosDiv.length; i++) {
            //obtengo el hijo del div
            var e = hijosDiv[i];
            //obtengo el idEvento
            var codEvento = e.getElementsByTagName('input')[0].value;
            var cntDescuento = e.getElementsByTagName('input')[1].value;
            var razon = $('#razon' + (i + 1));
            var indice = (i + 1);
            alert("indice afuera: " + indice);
            $.ajax({
                url: "/Services/Descuento/",
                data: { codEvento: codEvento, idBanco: idBanco, tipoTarjeta: tipoTarjeta },
                success: function (data) {
                    var obj = $.parseJSON(data);
                    var descuento = parseInt(obj.Descuento);
                    alert("indice adentro: " + indice);
                    if (descuento == -1) {
                        razon.append(indice + ". No cuenta con promocion");
                        alert("resultado " + razon.innerHTML);
                    } else {
                        razon.append(indice + ". Descuento de " + descuento + "%.");
                        alert("resultado " + razon.innerHTML);
                    }
                },
                error: function (data) {
                    alert("Error");
                }
            })
        }

    }
</script>
