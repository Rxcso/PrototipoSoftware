@using Microsoft.AspNet.Identity
@using WebApplication4.Models

@{
    ViewBag.Title = "MisCompras";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var db = new WebApplication4.Models.inf245netsoft();
    CuentaUsuario cu = null;
    //se obtiene la cuenta del usuario logueado
    cu = (CuentaUsuario)Session["UsuarioLogueado"];
    DateTime hoy = DateTime.Now;
    List<Ventas> listaventas = null;
    List<VentasXFuncion> listvxf = new List<VentasXFuncion>();
    //se obitienen las ventas del usuario logueado si se ha logueado la cuenta
    if (cu != null)
    {
        listaventas = db.Ventas.Where(r => r.Estado == "Pagado" && r.cliente == cu.usuario).ToList();
    }

}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class=""><a href="@Url.Action("MiCuenta", "CuentaUsuario")">Mi cuenta</a></li>
        <li class="active">Mis Compras</li>
    </ol>
</div>

<div class="container">
    <div class="row">
        <!--LA PARTE IMPORTANTE-->
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-6">
                    <h4>Mis Compras Pasadas:</h4>
                </div>
            </div>
            @*se muestra el contenido de la lista de ventasobtenida del usuario logueado*@
            <div class="row">
                <table id="mytable" class="table table-bordered table-hover">
                    <thead>
                        <tr class="thead">
                            <th>Codigo</th>
                            <th>Fecha</th>
                            <th>Cantidad de Boletos</th>
                            <th>Monto (S/.)</th>
                            <th>Estado</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                        @if (listaventas != null)
                        {
                            foreach (var row in listaventas)
                            {
                                <tr id=@row.codVen onclick="myFunction(this)">
                                    <td>@row.codVen</td>
                                    <td>@row.fecha.Value.ToString("dd/MM/yyyy")</td>
                                    <td>@row.cantAsientos</td>
                                    <td>@row.MontoTotalSoles</td>
                                    <td>@row.Estado</td>
                                    <td><a href="@Url.Action("Detalles", "Ventas", new { id = row.codVen })" class="btn btn-primary">Detalles <span class="glyphicon glyphicon-pencil"></span></a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <br>
        </div>
        <!--LOS EVENTOS DESTACADOS-->
        <div class="col-md-4">
            <div class="headDestacados">
                EVENTOS DESTACADOS
            </div>
            <div id="carousel-1" class="carousel slide" data-ride="carousel">
                <!--indicadores primero-->
