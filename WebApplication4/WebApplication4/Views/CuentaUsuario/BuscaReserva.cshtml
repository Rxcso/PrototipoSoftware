@using Microsoft.AspNet.Identity;
@using WebApplication4.Models;

@{
    ViewBag.Title = "BuscaReserva";
    Layout = "~/Views/Shared/_LayoutPersonal.cshtml";
    var db = new WebApplication4.Models.inf245netsoft();
    List<VentasXFuncion> listaReserva = null;
    if (Session["ReservaBusca"] != null)
    {
        listaReserva = (List<WebApplication4.Models.VentasXFuncion>)Session["ReservaBusca"];
    }
}

<div class="container-fluid">
    <div class="col-md-5">
        <ol class="breadcrumb">
            <li class="active">Reservas de clientes</li>
        </ol>
    </div>
</div>

<div class="container">
    <div class="row ">
        <div class="col-md-1">
            <label for="dni" class="control-label">Tipo Doc:</label>
        </div>
        <div class="col-md-2">
            <select class="form-control" name="" id="comboBusq">
                <option value="0">Ambos</option>
                <option value="1">DNI</option>
                <option value="2">Pasaporte</option>
            </select>
        </div>
        <div class="col-md-2">
            <label for="dni" class="control-label">N° Documento:</label>
        </div>
        <div class="col-md-2">
            <div class="input-group">
                <input id="idBusq" type="text" class="form-control">
                <span class="input-group-btn"><button onclick="busca()" class="btn btn-primary" type="button"><span class="glyphicon glyphicon-search"></span></button></span>
            </div>
        </div>

        <div class="col-md-3 ">
            <a href="carrito_compras.html" class="btn btn-primary pull-right">Pagar reserva <span class="glyphicon glyphicon-usd"></span></a>
        </div>
        <div class="col-md-2">
            <a href="@Url.Action("Index2", "Home")" class="btn btn-danger pull-right">Salir <span class="glyphicon glyphicon-log-out"></span></a>
        </div>
    </div>





    <div class="row">
        <h4>Resultados:</h4><br>
        <div class="row">
            <table id="mytable" class="table table-bordered table-hover">
                <thead>
                    <tr class="thead">
                        <th>Código Reserva</th>
                        <th>Nombre</th>
                        <th>N° Doc</th>
                        <th>Evento</th>
                        <th>Cantidad Entradas</th>
                        @*<th>Monto</th>*@
                        @*<th>Moneda</th>*@
                    </tr>
                </thead>
                <tbody id="tbody">
                    @if (listaReserva!= null)
                    {
                        foreach (var row in listaReserva)
                        {
                            <tr id=@row.codVen onclick="myFunction(this)">
                                <td>@row.codVen</td>
                                @{
                                    Ventas ve=db.Ventas.Find(row.codVen);
                                    Funcion fu=db.Funcion.Find(row.codFuncion);
                                }
                                <td>@db.CuentaUsuario.Find(ve.cliente).nombre</td>
                                <td>@ve.codDoc</td>
                                <td>@db.Eventos.Find(fu.codEvento).nombre</td>
                                <td>@row.cantEntradas</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div><br>




    <br><br>


</div><!--Fin del container-->

<script>
    function busca() {
        var usuario = $('#idBusq').val();
        var tipo = $('#comboBusq option:selected').val();
        //var el = document.getElementById(regalo);
        //var row = $(el).closest('tr');
        //alert(evento);
        //alert(promocion);
        //if (usuario != "" && tipo != "" && usuario != null && tipo != null) {
        $.ajax({
            url: "@Url.Action("SearchReserva", "CuentaUsuario")",
            data: { usuario: usuario, tipo: tipo },
            success: function (data) {
                window.location.href = '/CuentaUsuario/BuscaReserva';
                //alert("Eliminado");
                //row.remove();
            },
            error: function () {
                alert("Error :(");
            }
        });
        //} else {
        //    alert("Ingrese todos los campos de busqueda");
        //}
    }
</script>
