@using Microsoft.AspNet.Identity
@using WebApplication4.Models

@model ReporteClienteModel

@{
    ViewBag.Title = "ReporteCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var db = new WebApplication4.Models.inf245netsoft();
    List<WebApplication4.Models.CuentaUsuario> listaCliente = null;
}

<div class="container-fluid">
    <div class="col-md-5">
        <ol class="breadcrumb">
            <li class="active">Generar Reporte de Clientes</li>
        </ol>
    </div>

</div>

<div class="container">
    <div class="row">
        <div class="col-md-11">
            
            @if (TempData["ListaPU"] != null)
            {
                <input id="btnExport" type="button" class="btn btn-primary" value="Exportar Excel">
            }
        </div>
        <div class="col-md-1">
            <a class="btn btn-danger pull-right" href="@Url.Action("Index2", "Home")">Salir <span class="glyphicon glyphicon-log-out"></span></a>
        </div>
    </div><br>

    @using (Html.BeginForm("ReporteCliente", "CuentaUsuario", FormMethod.Post, new { }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.puntos, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.puntos)
                    @Html.ValidationMessageFor(model => model.puntos)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Buscar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <br>

    @if (TempData["ListaPU"] != null)
    {
        listaCliente = (List<WebApplication4.Models.CuentaUsuario>)TempData["ListaPU"];
        <div id="dvData" class="row">
            <div>
                <h3>Reporte de Clientes @DateTime.Now.Date.ToString("dd/MM/yyyy")</h3>
            </div>
            <table id="mytable" class="table table-bordered table-hover">
                <thead>
                    <tr class="thead">
                        <th>Usuario</th>
                        <th>Nombre y Apellido</th>
                        <th>No Documento</th>
                        <th>No Reservas Anuladas</th>
                        <th>Puntos</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                    @foreach (var row in listaCliente)
                    {

                        List<Ventas> listaA = db.Ventas.Where(c => c.cliente == row.usuario && (c.Estado == "Anulado" || c.Estado == "Anulado-Job")).ToList();

                        <tr id=@row.usuario onclick="myFunction(this)">
                            <td>@row.usuario</td>
                            <td>@row.nombre   @row.apellido</td>
                            <td>@row.codDoc</td>
                            <td>@listaA.Count</td>
                            <td>@row.puntos</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }
</div>

<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnExport").click(function (e) {
            window.open('data:application/vnd.ms-excel,' + encodeURIComponent($('div[id$=dvData]').html()));
            e.preventDefault();
        });
    });
</script>

<style>
    h3 {
        text-align: center;
    }
</style>