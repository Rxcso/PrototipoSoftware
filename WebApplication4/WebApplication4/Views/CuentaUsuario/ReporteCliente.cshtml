@using Microsoft.AspNet.Identity
@using WebApplication4.Models

@model ReporteClienteModel

@{
    ViewBag.Title = "ReporteCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var db = new WebApplication4.Models.inf245netsoft();
    //se define la lista de los clientes que se mostraran
    List<WebApplication4.Models.CuentaUsuario> listaCliente = null;
}

<div class="container-fluid">
    <div class="col-md-5">
        <ol class="breadcrumb">
            <li class="active">Generar Reporte de Clientes</li>
        </ol>
    </div>

</div>

<div class="container">
    <div class="row">
        <div class="col-md-11">
            @*se verifica si se genero un reporte o no para mostrar el boton de exportacion*@
            @if (Session["ListaPU"] != null)
            {
                <input id="btnExport" type="button" class="btn btn-primary" value="Exportar Excel">
            }
        </div>
        <div class="col-md-1">
            @*<a class="btn btn-danger pull-right" href="@Url.Action("Index2", "Home")">Salir <span class="glyphicon glyphicon-log-out"></span></a>*@
        </div>
    </div><br>

    <div class="row">
        <label for="inPoints" class="control-label col-md-2">Puntaje minimo: </label>
        <div class="col-md-2">
            <input id="min-points" name="inPoints" type="number" class="form-control" value="" />
        </div>
        <label for="inPoints" class="control-label col-md-2">No. Documento: </label>
        <div class="col-md-2">
            <input id="nDoc" name="Doc" type="text" class="form-control" value="" />
        </div>
        <div class="col-md-2">
            <input id="search-client" type="button" onclick="reporte()" class="btn btn-primary" value="Generar Reporte">
        </div>
    </div><br>

    <br>
    @*si se logro generar un reporte se muestra su contenido*@
    @if (Session["ListaPU"] != null)
    {
        listaCliente = (List<WebApplication4.Models.CuentaUsuario>)Session["ListaPU"];
        <div id="dvData" class="row">
            <div>
                <h3>Reporte de Clientes @DateTime.Now.Date.ToString("dd/MM/yyyy")</h3>
            </div>
            <table id="mytable" class="table table-bordered table-hover">
                <thead>
                    <tr class="thead">
                        <th>Usuario</th>
                        <th>Nombre y Apellido</th>
                        <th>No Documento</th>
                        <th>No Reservas Anuladas</th>
                        <th>Puntos</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                    @foreach (var row in listaCliente)
                    {
                        //se obtiene la lista de las reservas anuladas o anuladas por job de cada cliente de cada fila                        
                        List<Ventas> listaA = db.Ventas.Where(c => c.cliente == row.usuario && (c.Estado == "Anulado" || c.Estado == "Anulado-Job")).ToList();
                        <tr id=@row.usuario onclick="myFunction(this)">
                            <td>@row.usuario</td>
                            <td>@row.nombre   @row.apellido</td>
                            <td>@row.codDoc</td>
                            <td>@listaA.Count</td>
                            <td>@row.puntos</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }
</div>

<script>
    function reporte() {
        var fd = $('#min-points').val();
        var doc = $('#nDoc').val();
        //se obtiene los valores ingresados de los punto y el numero de documento
        if (fd != "" || doc != "") {
            //se envian los datos ingresados para generar el reporte
            $.ajax({
                url: "@Url.Action("ReporteC", "CuentaUsuario")",
                data: {fd:fd,doc:doc},
                success: function (data) {
                    //se muestra el mensaje y se carga la pagina
                    alert(data);
                    window.location.href = '/CuentaUsuario/ReporteCliente';
                },
                error: function (data) {
                    alert(data);
                    window.location.href = '/CuentaUsuario/ReporteCliente';
                }
            });
        } else {
            //si no se escribe nada en los campos se borra el reporte generado actualmente
            $.ajax({
                url: "@Url.Action("LimpiaR", "CuentaUsuario")",
                data: {},
                success: function () {
                window.location.href = '/CuentaUsuario/ReporteCliente';
                },
                error: function (data) {
                    alert(data);
                    window.location.href = '/CuentaUsuario/ReporteCliente';
                }
            });
        }
    }

</script>

<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnExport").click(function (e) {
            window.open('data:application/vnd.ms-excel,' + encodeURIComponent($('div[id$=dvData]').html()));
            e.preventDefault();
        });
    });
</script>

<style>
    h3 {
        text-align: center;
    }
</style>