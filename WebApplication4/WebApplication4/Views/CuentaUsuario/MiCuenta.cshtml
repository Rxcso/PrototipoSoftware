
@using WebApplication4.Models;

    @{
        ViewBag.Title = "Mi Cuenta";
        Layout = "~/Views/Shared/_Layout.cshtml";
        int ptos = ViewBag.ptos;
        List<Eventos> listaDestacados = ViewBag.ListaDestacados as List<Eventos>;
    }


    <div class="container-fluid">
        <div class="col-md-2">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li class="active">Mi cuenta</li>
            </ol>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <form action="" class="form-horizontal ">
                    <ol id="pref" class="navbar " style="font-size:20px;">
                        <li><a href="@Url.Action("ModificarDatos","CuentaUsuario")">Actualizar mis datos</a>
                        <li><a href="@Url.Action("ChangePassword","Manage")">Cambiar mi contraseña</a>
                        <li><a href="@Url.Action("MisReservas", "CuentaUsuario")">Ver mis reservas</a>
                        <li><a href="@Url.Action("MisCompras", "CuentaUsuario")">Ver mis Compras</a>
                        <li><a href="@Url.Action("MiCarrito","CuentaUsuario")">Ver carrito</a>
                        <li><a href="@Url.Action("VerRegalos","CuentaUsuario")">Ver Regalos</a>
                    </ol>
                </form>
            </div>
            <div class="col-md-3">
                <h3>Puntos: @ptos</h3>

            </div>
            <div class="col-md-4">
                <div class="headDestacados">
                    EVENTOS DESTACADOS
                </div>
                <div id="carousel-1" class="carousel slide" data-ride="carousel">
                    <!--indicadores primero-->
                    <ol class="carousel-indicators"></ol>
                    <!--Contenedor de los slide-->
                    <div class="carousel-inner" role="listbox">
                        @for (var i = 0; i < listaDestacados.Count; i++)
                        {
                            <div class="@((i == 0) ? "item active" : "item ")">

                                <a href=@Url.Action("VerEvento", "Evento", new { id = listaDestacados[i].codigo })><img src=@listaDestacados[i].ImagenDestacado height="500" width="1200" class="img-responsive" alt=@listaDestacados[i].nombre></a>
                            </div>
                        }
                    </div>
                    <!--Controles-->
                    <a href="#carousel-1" class="left carousel-control" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    </a>
                    <a href="#carousel-1" class="right carousel-control" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>

