@using WebApplication4.Models
@model ExtrasModel
@{

}
<div class="tab-pane fade in container" id="extras">
    @using (Html.BeginForm("ExtrasEveto","Evento",FormMethod.Post))
    {
        <div class="container">
            <br>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(c => c.MaxReservas, new { @class="control-label col-md-2"})
                    <div class="col-md-2">
                        @Html.TextBoxFor(c => c.MaxReservas, new { @class="form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(c => c.PuntosToCliente, new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.TextBoxFor(c => c.PuntosToCliente, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(c => c.Ganancia, new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        <div class="input-group">
                            @Html.TextBoxFor(c => c.Ganancia, new { @class = "form-control"})
                            <span class="input-group-addon" id="ganancia">%</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(c => c.MontFijoVentEnt, new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        <div class="input-group">
                            <span class="input-group-addon" id="cancelar">S/.</span>
                            @Html.TextBoxFor(c => c.Ganancia, new { @class = "form-control"})
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(c => c.PenCancelacion, new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        <div class="input-group">
                            <span class="input-group-addon" id="cancelar">S/.</span>
                            @Html.TextBoxFor(c => c.PenCancelacion, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(c => c.PenPostergacion, new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        <div class="input-group">
                            <span class="input-group-addon" id="postergar">S/.</span>
                            @Html.TextBoxFor(c => c.PenPostergacion, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.ImageEvento, new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.ImageEvento, new { type = "file", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ImageEvento)
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.ImageDestacado, new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.ImageDestacado, new { type = "file", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ImageDestacado)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.ImageSitios, new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.ImageSitios, new { type = "file", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ImageSitios)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-2">
                    <div class="checkbox">
                        @Html.LabelFor(c=> c.PermitirReservasWeb, new { @class = "control-label col-md-2" })
                        @Html.CheckBoxFor(c => c.PermitirReservasWeb)
                    </div>
                    <div class="checkbox">
                        @Html.LabelFor(c=> c.PermitirBoletoElectronico, new { @class = "control-label col-md-2" })
                        @Html.CheckBoxFor(c => c.PermitirBoletoElectronico)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-md-offset-5">
                    <button type="submit" class="btn btn-primary">Registrar Evento</button><br /><br />
                </div>
            </div>
        </div>
    }
</div>