@using Microsoft.AspNet.Identity;
@using WebApplication4.Models;
@using WebApplication4.Controllers;

@{
    ViewBag.Title = "Ver Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Eventos model = Model;
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")">Inicio</a></li>
        <li class="active">Evento @Model.nombre</li>
    </ol>
</div>

<div class="container ">
    <!--la parte importante-->
    <div id="contenido" class="col-md-8 borde">
        <div id="detalles" class="row">
            <div class="col-md-3">
                <div id="fila" class="row">
                    <div class="thumbnail">
                        <img class="event" src=@Model.ImagenDestacado alt=@Model.nombre>
                        <div class="caption" style="text-align:left">
                            <h4>@Model.nombre</h4>
                            <p><strong><u>Fechas:</u></strong> Del @(((DateTime)model.fecha_inicio).ToShortDateString()) al @(((DateTime)model.fecha_fin).ToShortDateString())</p>
                            <p>
                                <strong><u>Dirección:</u></strong>
                                @{
                                    if (model.idLocal == null || model.idLocal != 0)
                                    {
                                        @ViewBag.NombreLocal
                                    }
                                    else
                                    {
                                        @(model.direccion)
                                    }
                                }
                            </p>
                            <p><strong><u>Región:</u></strong> @ViewBag.Region</p>
                            <p><strong><u>Ofertas:</u></strong> 20% dcto. con tarjeta VISA</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <div id="fila" class="row">
                    <div class="thumbnail" style="text-align:justify">
                        <p><strong><u>Categoria:</u></strong> @ViewBag.Categoria</p>
                        <p><strong><u>Subcategoria:</u></strong> @ViewBag.Subcategoria</p>
                        <p><strong><u>Descripción:</u></strong></p>
                        <p>@Model.descripcion</p>
                    </div>
                </div>
            </div>
        </div>
        <div id="zonas" class="row">
            <div class="thumbnail">
                <div class="container-fluid">
                    <h4><u>Distribución de zonas</u></h4>
                    <img class="event" src=@Model.ImagenSitios alt="Zonas de evento">
                </div>
            </div>
        </div>
        <div id="tarifas" class="row">
            <div class="thumbnail">
                <div class="container-fluid">
                    <div><h4><u>Selección de boletos/asientos</u></h4></div>
                    <div class="col-md-6">
                        <div id="canvas" class="col-md-12">           </div>
                        <div id="aux" class="col-md-12">              </div>
                    </div>
                    <div class="col-md-6">
                        @if (ViewBag.EventoAcabo != null)
                        {
                            @ViewBag.EventoAcabo
                        }
                        else
                        {
                            if (ViewBag.EventoNoDisponible != null)
                            {
                                <p>@ViewBag.EventoNoDisponible</p>
                                List<string> futurasVentas = ViewBag.FuturasVentas as List<string>;
                                for (int i = 0; i < futurasVentas.Count; i++)
                                {
                                    <p style="margin-left:5em">@futurasVentas[i]</p>
                                }
                            }
                            else
                            {
                                <div class="row form-group">
                                    <label for="funcion" class="control-label col-md-4">Función:</label>
                                    @{
                                if (ViewBag.MensajeErrorFunciones != null)
                                {
                                    <input type="text" class="form-control" value="@ViewBag.MensajeErrorFunciones" disabled>
                                }
                                else
                                {
                                    <div id="funcion" class="col-md-8">
                                        <select class="form-control">
                                            <option>Seleccione</option>
                                            <option>12/10/15</option>
                                            <option>15/10/15</option>
                                        </select>
                                    </div>
                                }
                                    }

                                </div>
                                <div class="row form-group">
                                    <label for="hora" class="control-label col-md-4">Hora:</label>
                                    <div id="funcion" class="col-md-8">
                                        <select id="hora" class="form-control ">
                                            <option value="">Seleccione</option>
                                            <option value="">4:00 pm</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label for="zonaTarifa" class="control-label col-md-4">Zona/Tarifa:</label>
                                    <div id="funcion" class="col-md-8">
                                        <select id="zonaTarifa" class="form-control">
                                            <option value="">Seleccione</option>
                                            <option value="">GENERAL A - S/.50</option>
                                            <option value="">GENERAL B - S/.50</option>
                                            <option value="">GENERAL C - S/.50</option>
                                            <option value="">VIP A - S/.200</option>
                                            <option value="">VIP B - S/.200</option>
                                            <option value="">VIP C - S/.150</option>
                                            <option value="">VIP D - S/.150</option>
                                            <option value="">VIP E - S/.150</option>
                                            <option value="">PREFERENCIAL A - S/.80</option>
                                            <option value="">PREFERENCIAL B - S/.80</option>
                                            <option value="">PREFERENCIAL C - S/.70</option>
                                            <option value="">PREFERENCIAL D - S/.70</option>
                                            <option value="">MOMENTOS CREDOMATIC - S/.300</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label for="zonaTarifa" class="control-label col-md-4">Cantidad entradas:</label>
                                    <div class="col-md-4">
                                        <input class="form-control" type="number" value="0" min="1" max="8">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-md-6">
                                        <a href="mi_carrito_compras.html" class="btn btn-success pull-right ">Agregar al carrito <span class="glyphicon glyphicon-shopping-cart"></span></a>
                                    </div>
                                    <div class="col-md-6">
                                        <a onclick="reservaExitosa()" href="buscar_reserva(cliente).html" class="btn btn-primary pull-right ">Reservar <span class="glyphicon glyphicon-save"></span></a>
                                    </div>
                                </div>
                            }
                        }

                    </div>

                </div>
            </div>
        </div>
        <div id="comentarios" class="row">
            <div class="thumbnail">
                <div class="caption" style="text-align:justify">
                    <div class="container-fluid">
                        <h4><u>Comentarios</u></h4>
                    </div>
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <textarea class="form-control " rows="1" id="comentario" placeholder="Escribe un comentario de este evento"></textarea>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

    <!--LOS EVENTOS DESTACADOS-->

</div>
<script>
    function reservaExitosa() {
        alert("Reserva exitosa, tiene hasta el final del día para pagarla");
    }
</script>



