@using Microsoft.AspNet.Identity
@using WebApplication4.Models

@model TipoDeCambioModel

@{        
    ViewBag.Title = "Index";        
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="col-md-5">
        <ol class="breadcrumb">
            <li class="active">Tipo de cambio</li>
        </ol>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <br>
            @*<a href="@Url.Action("Index2", "Home")" class="btn btn-danger pull-right">Salir <span class="glyphicon glyphicon-log-out"></span></a>*@
        </div>
    </div>

    @using (Html.BeginForm("RegisterTipoDeCambio", "TipoDeCambio", FormMethod.Post, new { }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <br>
            <div class="row form-group">
                @Html.LabelFor(model => model.valor, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.valor, new { @class = "form-control" } )
                    @Html.ValidationMessageFor(model => model.valor)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
    @{
        var db = new WebApplication4.Models.inf245netsoft();
        DateTime fecha1 = DateTime.Today.AddDays(-120);
        //se obtiene la lista de tipos de cambio de hace 120 dias atras
        List<WebApplication4.Models.TipoDeCambio> listaCambio = db.TipoDeCambio.AsNoTracking().Where(c => c.fecha > fecha1).ToList();
    }
    <div class="row">
        <table id="mytable" class="table table-bordered table-hover">
            <thead>
                <tr class="thead">
                    <th>Fecha de Registro</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody id="tbody">
                @foreach (var row in listaCambio)
                {
                    //se muestra la lista de tipos cambio obtenida
                    <tr>
                        <td>@row.fecha</td>
                        @{
                            double n1 = (double) row.valor;
                            //n1.ToString("0.00");
                        }
                        <td>@n1.ToString("0.00")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

