@using Microsoft@using Microsoft.AspNet.Identity
@using WebApplication4.Models

@model CategoriaModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPersonal.cshtml";
}

<div class="container-fluid">
    <div class="col-md-5">
        <ol class="breadcrumb">
            <li class="active">Mantenimiento de Categorías</li>
        </ol>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-11">
            <div class="form-group">
                <a class="btn btn-primary" href="#formNuevo" data-toggle="modal">Nuevo <span class="glyphicon glyphicon-plus"></span></a>
                <a class="btn btn-primary" onclick="editar()">Modificar <span class="glyphicon glyphicon-pencil"></span></a>
                <a class="btn btn-primary" onclick="borrar()">Dar de Baja <span class="glyphicon glyphicon-remove"></span></a>
            </div>
        </div>

        <div class="col-md-1">
            <a class="btn btn-danger" href="index2.html">Salir <span class="glyphicon glyphicon-log-out"></span></a>
        </div>
    </div>

    @{
        var db = new WebApplication4.Models.inf245netsoft();
        List<WebApplication4.Models.Categoria> listaCategoria;
        if (TempData["ListaC"] == null)
        {
            listaCategoria = db.Categoria.AsNoTracking().Where(c => c.activo == 1).ToList();
        }
        else
        {
            listaCategoria = (List<WebApplication4.Models.Categoria>)TempData["ListaC"];
        }
    }
    <div class="row">
        <table id="mytable" class="table table-bordered table-hover">
            <thead>
                <tr class="thead">
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Id Padre</th>
                    <th>Nivel</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tbody">
                @foreach (var row in listaCategoria)
                {
                    <tr id=@row.idCategoria onclick="myFunction(this)">
                        <td>@row.idCategoria</td>
                        <td>@row.nombre</td>
                        <td>@row.descripcion</td>
                        <td>@row.idCatPadre</td>
                        <td>@row.nivel</td>
                        <td>@row.activo</td>
                        <td>@Html.ActionLink("Delete", "Delete", new { id = row.idCategoria })</td>
                        <td>@Html.ActionLink("Edit", "Edit", new { id = row.idCategoria })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




<!--Tab para siguiente categoria-->
<div class="modal fade" id="formNuevo">
    <!--esta div pondra la pantalla oscura al presionar el boton-->
    <div class="modal-dialog">
        <div class="modal-content">
            <!--ACA VA EL CONTENIDO DEL MODAL-->
            <!--header de la ventana-->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times; </button>
                <h4 class="modal-title">Nuevo tipo</h4>
            </div>
            <!--contenido de la ventana-->
            <div class="modal-body">
                <form action="" class="form-horizontal">
                    <div class="form-group">
                        <label for="nombre" class="control-label col-md-2">Nombre:</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" id="nombre" placeholder="Nombre del tipo">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="direccion" class="control-label col-md-2">Descripción:</label>
                        <div class="col-md-10">
                            <input type="textarea" class="form-control" id="direccion" placeholder="Descripción">

                        </div>
                    </div>

                    <div class="form-group">
                        <label for="direccion" class="control-label col-md-2">Id Padre:</label>
                        <div class="col-md-10">
                            <input type="textarea" class="form-control" id="idPadre" placeholder="Id Padre">

                        </div>
                    </div>


                </form>
            </div>
            <!--footer de la ventana-->
            <div class="modal-footer">

                <button type="button" onclick="registrar()" data-dismiss="modal" aria-hidden="true" class="btn btn-primary">Agregar <span class="glyphicon glyphicon-ok"></span></button>
            </div>
        </div>
    </div>
</div>
