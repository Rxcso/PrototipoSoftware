<script>
    function myFunction(x) {
        if (document.getElementsByClassName("trselected").length > 0) {
            var element = document.getElementsByClassName("trselected");
            //element.item[0].cells[0].innerText;
            element[0].className = "";
        }
        //var tabla = document.getElementById("mytable");
        //alert(x);
        //var y = x.getCells();
        var elem = document.getElementById("idPuntoT");
        elem.value = x.cells[0].innerHTML;
        //alert(x.cells[0].innerHTML);
        //ViewBag.P = x.cells[0].innerHTML;
        x.className = "trselected";

        //<a class="btn btn-primary" href="javascript:document.getElementsByClassName('trselected').submit()">Borrar<span class="glyphicon glyphicon-pencil"></span></a>
        //idProm = x.codp;
    }
    function borrar() {
        var punto = $('#idPuntoT').val();
        var el = document.getElementById(punto);
        var row = $(el).closest('tr');
        //alert(evento);
        //alert(promocion);
        if (punto != "" && punto != null) {
            $.ajax({
                url: "@Url.Action("Delete","PuntoVenta")",
                data: { punto: punto },
                success: function (data) {
                    //alert("Eliminado");
                    $('#eliminar').modal('hide');
                    row.remove();
                    window.location.href = '/PuntoVenta/Index';
                },
                error: function () {
                    alert("Error :(");
                }
            });
        } else {
            alert("Seleccione un Punto de Venta");
            evento = "";
        }
    }
    function redirige() {
        var punto = $('#idPuntoT').val();
        if (punto != "") {
            window.location.href = '/PuntoVenta/Edit?punto=' + punto;
        } else {
            alert("Seleccione un Punto de Venta");
            evento = "";
        }
        //$.post('/Regalo/Edit/' + regalo);
    }
    function busca() {
        var punto = $('#idBusq').val();
        //var el = document.getElementById(regalo);
        //var row = $(el).closest('tr');
        //alert(evento);
        //alert(promocion);
        $.ajax({
            url: "@Url.Action("Search2", "PuntoVenta")",
            data: { punto: punto },
            success: function (data) {
                window.location.href = '/PuntoVenta/Index';
                //alert("Eliminado");
                //row.remove();
            },
            error: function () {
                alert("Error :(");
            }
        });
    }
    function closewindow() {
        $('#eliminar').modal('hide');
    }
</script>

