    @{
        var db = new WebApplication4.Models.inf245netsoft();
        List<WebApplication4.Models.Promociones> listaPromo = db.Promociones.AsNoTracking().Where(c => c.codEvento == 1 && c.estado == true).ToList();
    }


    <div class="row">
        <table id="mytable" class="table table-bordered table-hover">
            <thead>
                <tr class="thead">
                    <th>Codigo</th>
                    <th>Descripcion</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tbody">
                @foreach (var row in listaPromo)
                {
                    <tr id=@row.codPromo onclick="myFunction(this)">
                        <td>@row.codPromo</td>
                        <td>@row.descripcion</td>
                        <td>@row.fechaIni</td>
                        <td>@row.fechaFin</td>
                        <td>@Html.ActionLink("Delete","Delete", new { id = row.codPromo, ide = row.codEvento })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<script>
    function myFunction(x) {
        if (document.getElementsByClassName("trselected").length > 0) {
            var element = document.getElementsByClassName("trselected");
            //element.item[0].cells[0].innerText;
            element[0].className = "";            
            ViewData["Prueba"] = element[0].cells[0].innerText;
            ViewBag.Name = element[0].cells[1].innerText;
        }
        x.className = "trselected";
        //<a class="btn btn-primary" href="javascript:document.getElementsByClassName('trselected').submit()">Borrar<span class="glyphicon glyphicon-pencil"></span></a>
        idProm = x.codp;
    }
</script>

