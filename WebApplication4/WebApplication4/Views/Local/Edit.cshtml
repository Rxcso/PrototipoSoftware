    //if (ViewData["Region"] != null)
    //{
    //    listaProvincia = db.Region.AsNoTracking().Where(c => c.idRegPadre == i).ToList();
    //}
    //else
    //{
    //    listaProvincia = db.Region.AsNoTracking().Where(c => c.idRegPadre != null).ToList();
    //}
    IEnumerable<SelectListItem> listItems2 = (from a in listaProvincia
                                              select new SelectListItem
                                            {
                                                Value = a.idRegion.ToString(),
                                                Text = a.nombre,
                                                Selected = false
                                            });
                }
                @Html.DropDownListFor(model => model.provincia, listItems2, "Seleccione Provincia")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aceptar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

