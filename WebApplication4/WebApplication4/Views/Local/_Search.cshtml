@using Microsoft.AspNet.Identity
@using WebApplication4.Models

@model LocalSearchModel

@{
    var db = new WebApplication4.Models.inf245netsoft();
}

<br>
@using (Html.BeginForm("Search", "Local", FormMethod.Post, new { }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <br>
        <div class="row form-group">
            @Html.LabelFor(model => model.nombre, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.nombre)
                @Html.ValidationMessageFor(model => model.nombre)
            </div>
        </div>

        <div class="row form-group">
            @Html.LabelFor(model => model.departamento, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @{
    List<WebApplication4.Models.Region> listaDepartamento = db.Region.AsNoTracking().Where(c => c.idRegPadre == null).ToList();
    IEnumerable<SelectListItem> listItems = (from a in listaDepartamento
                                             select new SelectListItem
                                           {
                                               Value = a.idRegion.ToString(),
                                               Text = a.nombre,
                                               Selected = false
                                           });
    listItems.First().Selected = true;
                }
                @Html.DropDownListFor(model => model.departamento, listItems, "Seleccione Departamento")
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
