        {
            listaLocal = (List<WebApplication4.Models.Local>)TempData["ListaL"];
        }
    }

    <div class="row">
        <table id="mytable" class="table table-bordered table-hover">
            <thead>
                <tr class="thead">
                    <th>Id</th>
                    <th>Descripcion</th>
                    <th>Ubicacion</th>
                    <th>Aforo</th>
                    <th>Provincia</th>
                    <th>Departamento</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tbody">
                @foreach (var row in listaLocal)
                {
                    <tr id=@row.codLocal onclick="myFunction(this)">
                        <td>@row.codLocal</td>
                        <td>@row.descripcion</td>
                        <td>@row.ubicacion</td>
                        <td>@row.aforo</td>
                        <td>@db.Region.Find(row.idProvincia).nombre</td>
                        <td>@db.Region.Find(row.idRegion).nombre</td>
                        @*<td>@Html.ActionLink("Delete", "Delete", new { id = row.codLocal })</td>*@
