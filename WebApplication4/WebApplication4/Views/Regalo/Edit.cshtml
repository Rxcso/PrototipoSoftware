@using Microsoft.AspNet.Identity
@using WebApplication4.Models


@model RegaloModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Regalo re = (Regalo)Session["regalo"];
    RegaloModel r1 = new RegaloModel();
    r1.nombre = re.Nombre;
    r1.descripcion = re.descripcion;
    r1.puntos = (int)re.puntos;
}

<style>
    .contenedor {
        border: 1px solid #080808;
    }
</style>

<div class="container-fluid">
    <div class="col-md-5">
        <ol class="breadcrumb">
            <li class="active"><a href="@Url.Action("Index","Regalo")"> Mantenimiento de regalos</a></li>
            <li>Editar Regalo</li>
        </ol>
    </div>
</div>

<div class="container">    
    @using (Html.BeginForm("EditRegister", "Regalo", FormMethod.Post, new { model = r1 }))
    {
        @Html.AntiForgeryToken()
        
    <div class="col-md-8 col-md-offset-2">
        <br>
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="row form-group">
                @Html.LabelFor(model => model.nombre, new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @*@Html.EditorFor(model => model.nombre)*@
                    @Html.TextBoxFor(model => model.nombre, new { @class = "form-control", @placeholder = @re.Nombre, @Value = @re.Nombre })
                    @Html.ValidationMessageFor(model => model.nombre)
                </div>
            </div>

            <div class="row form-group">
                @Html.LabelFor(model => model.descripcion, new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.descripcion, new { @class = "form-control", @placeholder = @re.descripcion, @Value = @re.descripcion })
                    @Html.ValidationMessageFor(model => model.descripcion)
                </div>
            </div>

            <div class="row form-group">
                @Html.LabelFor(model => model.puntos, new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.puntos, new { @class = "form-control", @placeholder = @re.puntos, @Value = @re.puntos })
                    @Html.ValidationMessageFor(model => model.puntos)
                </div>
            </div>
            <div class="form-group">
                <center>
                    <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-save"></span> Guardar cambios</button>
                    <a href="@Url.Action("Index","Regalo")" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Cancelar</a>
                </center>
            </div>
        </div>
    </div>

    }

</div>