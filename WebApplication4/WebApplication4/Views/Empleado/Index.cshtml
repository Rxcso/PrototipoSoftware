
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPersonal.cshtml";
}

<div class="container-fluid">
    <div class="col-md-5">
        <ol class="breadcrumb">
            <li class="active">Mantenimiento de Vendedores</li>
        </ol>
    </div>
</div>

@{
    var db = new WebApplication4.Models.inf245netsoft();
    List<WebApplication4.Models.CuentaUsuario> listaEmpleado = db.CuentaUsuario.AsNoTracking().Where(c => c.codPerfil == 2).ToList();
    List<WebApplication4.Models.CuentaUsuario> listaPromotor = db.CuentaUsuario.AsNoTracking().Where(c => c.codPerfil == 3).ToList();
}

<div class="container">
    <form action="" class="">
        <!--DECLARAMOS EL TABS Y LA CANTIDAD DE PESTAÑAS QUE TENDRA -->
        <ul class="nav nav-tabs">
            <li class="active"><a href="#mVendedores" data-toggle="tab">Mantenimiento de Vendedores</a></li>
            <li><a href="#mPromotores" data-toggle="tab">Mantenimiento de Promotores</a></li>
        </ul>

        <!--INTRODUCIMOS EL CONTIDO QUE TENDRA CADA PESTAÑA -->
        <div class="tab-content">
            <!--PRIMERA PESTAÑA-->
            <div class="tab-pane fade in active" id="mVendedores">
                <br>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <a class="btn btn-primary" href="#formNuevo1" data-toggle="modal">Nuevo <span class="glyphicon glyphicon-plus"></span></a>
                            <button type="button" class="btn btn-primary" onclick="modificar1()">Modificar <span class="glyphicon glyphicon-pencil"></span></button>
                            <a class="btn btn-primary" href="#eliminar1" data-toggle="modal">Dar de Baja <span class="glyphicon glyphicon-remove"></span></a>
                            <button id=botonOculto1 style="visibility:hidden" type="button" class="btn btn-primary" onclick="msjConfirmacion2_1()">Guardar Cambios <span class="glyphicon glyphicon-save"></span></button>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <form action="" class="" role="search">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="BUSCAR UN VENDEDOR">
                                    <span class="input-group-btn"><button class="btn btn-primary" type="button"><span class="glyphicon glyphicon-search"></span></button></span>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-2">
                        <a class="btn btn-danger pull-right" href="@Url.Action("Index2", "Home")">Salir <span class="glyphicon glyphicon-log-out"></span></a>
                    </div>

                </div>


                <div class="row">
                    <table id="mytable" class="table table-bordered table-hover">
                        <thead>
                            <tr class="thead">
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Direccion</th>
                                <th>Telefono</th>
                                <th>Correo (Usuario)</th>
                                <th>Estado</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tbody">
                            @foreach (var row in listaEmpleado)
                            {
                                <tr id=@row.usuario onclick="myFunction(this)">
                                    <td>@row.nombre</td>
                                    <td>@row.apellido</td>
                                    <td>@row.direccion</td>
                                    <td>@row.telefono</td>
                                    <td>@row.usuario</td>
                                    <td>@row.estado</td>
                                    <td>@Html.ActionLink("Delete", "Delete", new { id = row.usuario })</td>
                                    @*<td>@Html.ActionLink("Delete", "Delete", new { id = row.idRegalo })</td>
                                    <td>@Html.ActionLink("Edit", "Edit", new { id = row.idRegalo })</td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>


            </div>

            <!--SEGUNDA PESTAÑA-->
            <div class="tab-pane fade" id="mPromotores">
                <br>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <a class="btn btn-primary" href="#formNuevo2" data-toggle="modal">Nuevo <span class="glyphicon glyphicon-plus"></span></a>
                            <button type="button" class="btn btn-primary" onclick="modificar2()">Modificar <span class="glyphicon glyphicon-pencil"></span></button>
