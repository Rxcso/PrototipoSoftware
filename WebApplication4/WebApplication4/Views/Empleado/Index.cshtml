                        <div class="col-md-10">
                            <input type="text" class="form-control" id="direccion1" placeholder="Dirección">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="telefono1" class="control-label col-md-2">Teléfono:</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="telefono1" placeholder="">
