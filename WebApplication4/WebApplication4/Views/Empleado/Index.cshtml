                            <button id=botonOculto2 style="visibility:hidden" type="button" class="btn btn-primary" onclick="msjConfirmacion2_2()">Guardar cambios <span class="glyphicon glyphicon-save"></span></button>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <form action="" class="" role="search">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="BUSCAR UN PROMOTOR">
                                    <span class="input-group-btn"><button class="btn btn-primary" type="button"><span class="glyphicon glyphicon-search"></span></button></span>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-2">
                        <a class="btn btn-danger pull-right" href="@Url.Action("Index2", "Home")">Salir <span class="glyphicon glyphicon-log-out"></span></a>
                    </div>

                </div>

                <div class="row">
                    <table id="mytable" class="table table-bordered table-hover">
                        <thead>
                            <tr class="thead">
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Direccion</th>
                                <th>Telefono</th>
                                <th>Correo (Usuario)</th>
                                <th>Estado</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tbody">
                            @foreach (var row in listaPromotor)
                            {
                                <tr id=@row.usuario onclick="myFunction(this)">
                                    <td>@row.nombre</td>
                                    <td>@row.apellido</td>
                                    <td>@row.direccion</td>
                                    <td>@row.telefono</td>
                                    <td>@row.usuario</td>
                                    <td>@row.estado</td>
                                    <td>@Html.ActionLink("Delete", "Delete", new { id = row.usuario })</td>
                                    @*<td>@Html.ActionLink("Delete", "Delete", new { id = row.idRegalo })</td>
                            <td>@Html.ActionLink("Edit", "Edit", new { id = row.idRegalo })</td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </form>

</div>


