@using Microsoft.AspNet.Identity
@using WebApplication4.Models

@model WebApplication4.Models.EditViewModel


@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    CuentaUsuario cuenta = (CuentaUsuario)Session["usuarioE"];
    EditViewModel cuentaM = new EditViewModel();
    cuentaM.apellido = cuenta.apellido;
    cuentaM.direccion = cuenta.direccion;
    //cuentaM.Email = cuenta.correo;
    cuentaM.nombre = cuenta.nombre;
    cuentaM.telefono = cuenta.telefono;
    cuentaM.telMovil = cuenta.telMovil;
}

<style>
    .contenedor {
        border: 1px solid #080808;
    }
</style>

<div class="container-fluid">
    <div class="col-md-5">
        <ol class="breadcrumb">
            <li class="active"><a href="@Url.Action("Index","Empleado")"> Mantenimiento de empleados</a></li>
            <li>Editar empleado</li>
        </ol>
    </div>
</div>
<div class="container">
    @using (Html.BeginForm("EditRegister", "Empleado", FormMethod.Post, new { model = cuentaM }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-8 col-md-offset-2 contenedor">
        <br>
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <div class="control-label col-md-3">
                        <label>Tipo de Documento</label>
                    </div>
                    <div class="col-md-3">
                        @if ((int)cuenta.tipoDoc == 1)
                        {
                            <input type="text" value="DNI" class="form-control" aria-describedby="dolares" readonly="true">
                        }
                        else
                        {
                            <input type="text" value="Pasaporte" class="form-control" aria-describedby="dolares" readonly="true">
                        }
                    </div>
                    <div class="control-label col-md-2">
                        <label>Núm. Doc</label>
                    </div>
                    <div class="col-md-3">
                        <input type="text" value="@cuenta.codDoc" class="form-control" aria-describedby="dolares" readonly="true">
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.nombre, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.nombre, new { @class = "form-control", @placeholder = @cuentaM.nombre, @Value = @cuentaM.nombre })
                        @Html.ValidationMessageFor(model => model.nombre)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.apellido, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.apellido, new { @class = "form-control", @placeholder = @cuentaM.apellido, @Value = @cuentaM.apellido })
                        @Html.ValidationMessageFor(model => model.apellido)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.direccion, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.direccion, new { @class = "form-control", @placeholder = @cuentaM.direccion, @Value = @cuentaM.direccion })
                        @Html.ValidationMessageFor(model => model.direccion)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.telefono, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.telefono, new { @class = "form-control", @placeholder = @cuentaM.telefono, @Value = @cuentaM.telefono })
                        @Html.ValidationMessageFor(model => model.telefono)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.telMovil, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.telMovil, new { @class = "form-control", @placeholder = @cuentaM.telMovil, @Value = @cuentaM.telMovil })
                        @Html.ValidationMessageFor(model => model.telMovil)
                    </div>
                </div>                                
                <div class="form-group">
                    <center>
                        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-save"></span> Guardar cambios</button>
                        <a href="@Url.Action("Index","Empleado")" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Cancelar</a>
                    </center>
                </div>
            </div>
        </div>
        
    }
</div>

