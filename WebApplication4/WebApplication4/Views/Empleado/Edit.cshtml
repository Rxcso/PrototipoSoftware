@using Microsoft.AspNet.Identity
@using WebApplication4.Models

@model WebApplication4.Models.EditViewModel


@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPersonal.cshtml";
    CuentaUsuario cuenta = (CuentaUsuario)Session["usuarioE"];
    EditViewModel cuentaM = new EditViewModel();
    cuentaM.apellido = cuenta.apellido;
    cuentaM.direccion = cuenta.direccion;
    cuentaM.Email = cuenta.correo;
    cuentaM.nombre = cuenta.nombre;
    cuentaM.telefono = cuenta.telefono;
    cuentaM.telMovil = cuenta.telMovil;
}

@using (Html.BeginForm("EditRegister", "Empleado", FormMethod.Post, new {model=cuentaM }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <h3>Datos de ingreso</h3><br>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Email, new { @placeholder = @cuentaM.Email, @Value = @cuentaM.Email })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nombre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.nombre, new { @placeholder = @cuentaM.nombre, @Value = @cuentaM.nombre })
                @Html.ValidationMessageFor(model => model.nombre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.apellido, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.apellido, new { @placeholder = @cuentaM.apellido, @Value = @cuentaM.apellido })
                @Html.ValidationMessageFor(model => model.apellido)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.direccion, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.direccion, new { @placeholder = @cuentaM.direccion, @Value = @cuentaM.direccion })
                @Html.ValidationMessageFor(model => model.direccion)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.telefono, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.telefono, new { @placeholder = @cuentaM.telefono, @Value = @cuentaM.telefono })
                @Html.ValidationMessageFor(model => model.telefono)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.telMovil, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.telMovil, new { @placeholder = @cuentaM.telMovil, @Value = @cuentaM.telMovil })
                @Html.ValidationMessageFor(model => model.telMovil)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
